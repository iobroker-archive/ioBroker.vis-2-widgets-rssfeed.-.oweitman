{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "vis-2 editor",
            "url": "http://localhost:3000/#default",
            "webRoot": "${workspaceFolder}/src-widgets"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "vis-2 runtime",
            "url": "http://localhost:3000/?main#default",
            "webRoot": "${workspaceFolder}/src-widgets"
        },
        {
            "name": "Mocha: Current File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "runtimeExecutable": "c:/Users/oweit/AppData/Roaming/fnm/aliases/default/node.exe",
            "stopOnEntry": true,
            "args": ["./test/*.test.js"],
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug translate",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src-widgets/devutil/translate.js",
            "runtimeExecutable": "c:/Users/oweit/AppData/Roaming/fnm/aliases/default/node.exe",
            "stopOnEntry": true,
            "args": [],
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
